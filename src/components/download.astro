---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
---

<ContentSection title="تحميل" id="download">
  <Fragment slot="lead">
    <div class="grid grid-cols-1 gap-2 sm:grid-cols-3">
      <a
        href="https://github.com/Ashur-App/app/releases/latest"
        class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
      >
        <Icon name="mdi:android" class="size-8" />
        <span>Android</span>
      </a>
      <a
        href="https://github.com/Ashur-App/app/releases/latest"
        class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
      >
        <Icon name="mdi:apple" class="size-8" />
        <span>iOS</span>
      </a>
      <a
        href="https://ashuriq.now.sh"
        class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
      >
        <Icon name="mdi:web" class="size-8" />
        <span>Web</span>
      </a>
    </div>
  </Fragment>
</ContentSection>
